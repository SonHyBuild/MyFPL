<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFBF69"
    tools:context=".activity.DetailThongBaoFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/title"
                android:text="aaaa"

                android:backgroundTint="#F23452"
                android:foreground="?android:attr/selectableItemBackground"
                android:shadowColor="#FF2452"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:fontFamily="serif"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/black"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                >

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="198dp"
                    android:layout_height="173dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/bee" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/date2"
                android:layout_width="387dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="2023-2-2"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="352dp"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardMaxElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">


                <TextView
                    android:id="@+id/content2"
                    android:layout_width="377dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|center_horizontal"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="aaaaaaaaaaaaaaaaaaaaaaaa"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    android:textStyle="italic"></TextView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>